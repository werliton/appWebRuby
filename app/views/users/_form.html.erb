<%= form_for @user do |f| %>
  <p>
    <%= f.label :full_name  %>
    <%= f.text_field :full_name  %>
  </p>

  <p>
    <%=	 f.label :location %>
    <%= f.text_field :location %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>